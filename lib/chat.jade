body 
    +home
template(name='home')
    .ui.attached.menu
        .item 
            i.chat.icon
            |gchat
        .right.menu 
            .item 
                i.user.icon
                |profile
    .ui.stackable.padded.grid 
        .sixteen.wide.column
            .ui.comments.scrolling
                each message_docs
                    +message_item
            .ui.fluid.icon.input
                i.plus.icon
                input.new_message(type='text' placeholder='add message...')
                
                
template(name='message_item')
    .comment
        a.avatar 
            if _author.image_id
                img.ui.avatar.image(src="{{c.url _author.image_id width=200 height=200 gravity='face' crop='fill'}}")
        .content
            a.author #{_author.username}
            .metadata 
                span.date #{_when}
            .text 
                !{body}
            .actions 
                a.reply reply
                i.thumbs.up.icon 
                i.thumbs.down.icon
